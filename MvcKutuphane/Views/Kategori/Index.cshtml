@using MvcKutuphane.Models.Entity
@model List<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategori İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var ktgr in Model)
    {
        <tr>
            <td>@ktgr.KategoriID</td>
            <td>@ktgr.KategoriAD</td>
            <td><a href="/Kategori/KategoriSil/@ktgr.KategoriID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@ktgr.KategoriID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>
<br /><br />