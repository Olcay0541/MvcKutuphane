@model MvcKutuphane.Models.Entity.TblKategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2 style="text-align:center">Kategori Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div style="margin-bottom:20px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.KategoriID)
        @Html.TextBoxFor(k => k.KategoriID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(k => k.KategoriAD)
        @Html.TextBoxFor(k => k.KategoriAD, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
