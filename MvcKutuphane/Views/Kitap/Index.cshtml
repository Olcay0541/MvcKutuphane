@using MvcKutuphane.Models.Entity
@model List<TblKitap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .center {
            position: absolute;
            right: 20px;
            width: 150px;
            background-color: #007bff;
            color: #fff;
        }
    </style>
</head>
</html>
<br />
<a href="/Kitap/KitapEkle/" class="btn btn-lg center">Kitap Ekle</a>
<h2 style="text-align:center">Kitaplar</h2>
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
<div style="margin-bottom:15px; margin-top:15px">
    <b>Aranacak Kitabı Girin:</b> @Html.TextBox("p")
    <input type="submit" value="Ara" class="btn btn-warning" />
</div>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var ktp in Model)
    {
        <tr>
            <td>@ktp.KitapID</td>
            <td>@ktp.KitapAd</td>
            <td>@ktp.TblYazar.YazarAd&nbsp @ktp.TblYazar.YazarSoyad</td>
            <td>@ktp.TblKategori.KategoriAD</td>
            <td>@ktp.BasımYıl</td>
            <td>@ktp.YayınEvi</td>
            <td>@ktp.Sayfa</td>
            <td>@ktp.Durum</td>
            <td><a href="/Kitap/KitapSil/@ktp.KitapID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@ktp.KitapID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
