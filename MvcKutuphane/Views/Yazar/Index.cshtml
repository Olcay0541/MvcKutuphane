@using MvcKutuphane.Models.Entity
@model List<TblYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-bordered">
    <tr>
        <th>Yazar ID</th>
        <th>Yazar Ad</th>
        <th>Yazar Soyad</th>
        <th>Yazar Detay</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var Yazar in Model)
    {
        <tr>
            <td>@Yazar.YazarID</td>
            <td>@Yazar.YazarAd</td>
            <td>@Yazar.YazarSoyad</td>
            <td>@Yazar.YazarDetay</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = Yazar.YazarID },
               new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
            <td><a href="/Yazar/YazarGetir/@Yazar.YazarID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
